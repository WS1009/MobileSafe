<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res/com.wangshun.ms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.wangshun.ms.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:itemTitle="自动更新设置"
        itheima:desc_on="自动更新已开启"
        itheima:desc_off="自动更新已关闭"
        />

    <com.wangshun.ms.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:itemTitle="电话归属地显示"
        itheima:desc_on="归属地显示已开启"
        itheima:desc_off="归属地显示已关闭"
        />
    <com.wangshun.ms.view.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.wangshun.ms.view.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.wangshun.ms.view.SettingItemView
        android:id="@+id/siv_callsafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:itemTitle="黑名单更新设置"
        itheima:desc_on="黑名单更新已开启"
        itheima:desc_off="黑名单更新已关闭"
        />

</LinearLayout>
