<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res/com.wangshun.ms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <!--1、自定义命名空间   2、在SettingItemView中引用
    itheima命名空间为自己设置
    xmlns:itheima="http://schemas.android.com/apk/res/com.wangshun.ms"
    com.wangshun.ms为应用的包名，必须这样编写-->
    <com.wangshun.ms.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:desc_off="自动更新已关闭"
        itheima:desc_on="自动更新已开启"
        itheima:itemTitle="自动更新设置" />

    <com.wangshun.ms.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:desc_off="归属地显示已关闭"
        itheima:desc_on="归属地显示已开启"
        itheima:itemTitle="电话归属地显示" />

    <com.wangshun.ms.view.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.wangshun.ms.view.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.wangshun.ms.view.SettingItemView
        android:id="@+id/siv_callsafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:desc_off="黑名单更新已关闭"
        itheima:desc_on="黑名单更新已开启"
        itheima:itemTitle="黑名单更新设置" />

    <com.wangshun.ms.view.SettingItemView
        android:id="@+id/siv_app_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:desc_off="程序锁已关闭"
        itheima:desc_on="程序锁已开启"
        itheima:itemTitle="程序锁设置" />

</LinearLayout>
